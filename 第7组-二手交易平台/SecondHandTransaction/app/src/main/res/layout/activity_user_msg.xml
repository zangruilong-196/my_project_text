<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    tools:context=".UserMsgActivity">
    <RelativeLayout
        android:id="@+id/usermsg_re1"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/usermsg_return"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"/>
        <TextView
            android:id="@+id/tv_type1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户信息"
            android:textSize="24sp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>



    <View
        android:id="@+id/usermsg_view"
        android:layout_width="wrap_content"
        android:layout_height="0.0001dp"
        android:layout_below="@+id/usermsg_re1"
        android:background="#A8A7A7"
        android:layout_marginTop="1dp"/>

    <ImageView
        android:id="@+id/show_img"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_below="@+id/usermsg_re1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ww"/>
    <View
        android:id="@+id/usermsg_view6"
        android:layout_width="wrap_content"
        android:layout_height="0.0001dp"
        android:layout_below="@+id/show_img"
        android:background="#A8A7A7"
        android:layout_marginTop="1dp"/>
    <RelativeLayout
        android:id="@+id/usermsg_re2"
        android:layout_below="@id/show_img"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号"
                android:layout_centerVertical="true"
                android:textSize="20dp"
                />
            <TextView

                android:id="@+id/showUser"
                android:layout_toLeftOf="@+id/usermsg_m1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textSize="20dp" />
        <ImageView
            android:id="@+id/usermsg_m1"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_navigate_next_24"/>
        </RelativeLayout>
    <View
        android:id="@+id/usermsg_view2"
        android:layout_width="wrap_content"
        android:layout_height="0.0001dp"
        android:layout_below="@+id/usermsg_re2"
        android:background="#A8A7A7"
        android:layout_marginTop="1dp"/>
    <RelativeLayout
        android:id="@+id/usermsg_re3"
        android:layout_below="@id/usermsg_re2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            >
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/name"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/usermsg_m2"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="姓名"
                android:textSize="20dp"
                />
        <ImageView
            android:id="@+id/usermsg_m2"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_navigate_next_24"/>
        </RelativeLayout>
    <View
        android:id="@+id/usermsg_view3"
        android:layout_width="wrap_content"
        android:layout_height="0.0001dp"
        android:layout_below="@+id/usermsg_re3"
        android:background="#A8A7A7"
        android:layout_marginTop="1dp"/>
    <RelativeLayout
        android:id="@+id/usermsg_re4"
        android:layout_below="@id/usermsg_re3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
            >
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/showemail"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/usermsg_m3"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="邮箱"
                android:textSize="20dp"
                />
        <ImageView
            android:id="@+id/usermsg_m3"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_navigate_next_24"/>
        </RelativeLayout>
    <View
        android:id="@+id/usermsg_view4"
        android:layout_width="wrap_content"
        android:layout_height="0.0001dp"
        android:layout_below="@+id/usermsg_re4"
        android:background="#A8A7A7"
        android:layout_marginTop="1dp"/>
    <RelativeLayout
        android:id="@+id/usermsg_re5"
        android:layout_below="@id/usermsg_re4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
            >
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址"
                android:textSize="20dp"
                />
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/address"
                android:layout_toLeftOf="@id/usermsg_m4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginRight="10dp"
                android:text="地址"
                android:textSize="20dp"
                />
        <ImageView
            android:id="@+id/usermsg_m4"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_navigate_next_24"/>
        </RelativeLayout>
    <View
        android:id="@+id/usermsg_view5"
        android:layout_width="wrap_content"
        android:layout_height="0.0001dp"
        android:layout_below="@+id/usermsg_re5"
        android:background="#A8A7A7"
        android:layout_marginTop="1dp"/>
        <Button
            android:id="@+id/changemsg"
            android:layout_below="@id/usermsg_re5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改用户信息"
            android:textSize="20dp"
            android:background="@drawable/back2"
            android:layout_marginTop="50dp"
            />

</RelativeLayout>