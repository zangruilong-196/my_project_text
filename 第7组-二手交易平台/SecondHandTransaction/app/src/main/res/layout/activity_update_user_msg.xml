<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    tools:context=".UpdateUserMsgActivity">
    <RelativeLayout
        android:id="@+id/updatemsg_re1"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"/>
        <TextView
            android:id="@+id/tv_type2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="更改信息"
            android:textSize="24sp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/updatemsg_view"
        android:layout_width="wrap_content"
        android:layout_height="0.0001dp"
        android:layout_below="@+id/updatemsg_re1"
        android:background="#A8A7A7"
        android:layout_marginTop="1dp"/>


    <ImageView
        android:id="@+id/update_img"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_below="@+id/updatemsg_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ww"/>
    <View
        android:id="@+id/updatemsg_view6"
        android:layout_width="wrap_content"
        android:layout_height="0.0001dp"
        android:layout_below="@+id/update_img"
        android:background="#A8A7A7"
        android:layout_marginTop="1dp"/>

        <RelativeLayout
            android:id="@+id/updatemsg_re2"
            android:layout_below="@id/update_img"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <TextView
                android:id="@+id/updatemsg_t1"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号:"
                android:textSize="22dp"
                />
            <TextView
                android:layout_toRightOf="@id/updatemsg_t1"
                android:id="@+id/showUser"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user"
                android:textSize="22dp" />
        </RelativeLayout>
    <View
        android:id="@+id/updatemsg_view2"
        android:layout_width="wrap_content"
        android:layout_height="0.0001dp"
        android:layout_below="@+id/updatemsg_re2"
        android:background="#A8A7A7"
        android:layout_marginTop="1dp"/>
    <RelativeLayout
        android:id="@+id/updatemsg_re3"
        android:layout_below="@id/updatemsg_re2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/updatemsg_t2"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名:"
                android:textSize="22dp"
                />
            <EditText
                android:id="@+id/name"
                android:layout_toRightOf="@id/updatemsg_t2"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:background="@null"
                android:hint="请填写姓名"
                />

        </RelativeLayout>
    <View
        android:id="@+id/updatemsg_view3"
        android:layout_width="wrap_content"
        android:layout_height="0.0001dp"
        android:layout_below="@+id/updatemsg_re3"
        android:background="#A8A7A7"
        android:layout_marginTop="1dp"/>
    <RelativeLayout
        android:id="@+id/updatemsg_re4"
        android:layout_below="@id/updatemsg_re3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
            <TextView
                android:id="@+id/updatemsg_t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱:"
                android:layout_centerVertical="true"
                android:textSize="22dp"
                />
            <EditText
                android:layout_toRightOf="@id/updatemsg_t3"
                android:id="@+id/updatemsg_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="请填写邮箱"
                android:background="@null"
                />

        </RelativeLayout>
    <View
        android:id="@+id/updatemsg_view4"
        android:layout_width="wrap_content"
        android:layout_height="0.0001dp"
        android:layout_below="@+id/updatemsg_re4"
        android:background="#A8A7A7"
        android:layout_marginTop="1dp"/>
    <RelativeLayout
        android:id="@+id/updatemsg_re5"
        android:layout_below="@id/updatemsg_re4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
            <TextView
                android:id="@+id/updatemsg_t4"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址:"
                android:textSize="22dp"
                />
            <EditText
                android:id="@+id/address"
                android:layout_toRightOf="@id/updatemsg_t4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:hint="请填写地址"
                android:background="@null"
                />

        </RelativeLayout>
    <View
        android:id="@+id/updatemsg_view5"
        android:layout_width="wrap_content"
        android:layout_height="0.0001dp"
        android:layout_below="@+id/updatemsg_re5"
        android:background="#A8A7A7"
        android:layout_marginTop="1dp"/>
    <Button
        android:id="@+id/save"
        android:layout_below="@id/updatemsg_re5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存"
        android:layout_marginTop="50dp"
        android:textSize="22dp"
        android:background="@drawable/back1"
        android:textColor="@color/white"
        />

</RelativeLayout>