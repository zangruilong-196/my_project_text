<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">
    <TextView
        android:id="@+id/admin_te1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="管理员主页"
        android:textSize="22dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"/>
    <View
        android:layout_below="@id/admin_te1"
        android:layout_width="match_parent"
        android:layout_height="0.0001dp"
        android:background="#C3C0C0"/>

    <RelativeLayout
        android:id="@+id/re1"
        android:layout_below="@id/admin_te1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号:"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="25dp"
            />
        <EditText
            android:id="@+id/ed_1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="请输入账号"
            android:layout_marginLeft="90dp"
            android:background="@color/white"
            />


    </RelativeLayout>
    <View
        android:id="@+id/vi1"
        android:layout_below="@id/re1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>

    <RelativeLayout
        android:id="@+id/re2"
        android:layout_below="@id/vi1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码:"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="25dp"
            />
        <EditText
            android:id="@+id/ed_2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="请输入密码"
            android:layout_marginLeft="90dp"
            android:background="@color/white"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/li1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/re2"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/query"
            android:background="#2196F3"
            android:layout_below="@id/re2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询所有"/>
        <Button
            android:id="@+id/delete"
            android:background="#CD215C"
            android:layout_toRightOf="@id/query"
            android:layout_below="@id/re2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除所有"/>
        <Button
            android:id="@+id/bu_update"
            android:layout_below="@id/re2"
            android:layout_toRightOf="@id/delete"
            android:background="#2196F3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改"/>
        <Button
            android:id="@+id/bu_delete"
            android:layout_toRightOf="@id/bu_update"
            android:layout_below="@id/re2"
            android:background="#CD215C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"/>
    </LinearLayout>

    <TextView
        android:id="@+id/show"
        android:layout_marginTop="20dp"
        android:layout_below="@id/li1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="20dp"
        android:textColor="@color/black"/>
