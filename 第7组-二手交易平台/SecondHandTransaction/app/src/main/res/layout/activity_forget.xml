<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetActivity"
    android:background="#F4F3F3">

    <RelativeLayout
        android:id="@+id/forgetpwd_re1"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/back11"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"/>
        <TextView
            android:id="@+id/tv_type2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/forgetpwd_view"
        android:layout_width="wrap_content"
        android:layout_height="0.0001dp"
        android:layout_below="@+id/forgetpwd_re1"
        android:background="#A8A7A7"
        android:layout_marginTop="1dp"/>
    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/forgetpwd_view"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号:"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="22dp"
            />
        <EditText
            android:id="@+id/forget_id"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="请输入手机号"
            android:layout_marginLeft="90dp"
            android:background="@color/white"
            />


    </RelativeLayout>
    <View
        android:id="@+id/vi1"
        android:layout_below="@id/re1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>

    <RelativeLayout
        android:id="@+id/re2"
        android:layout_below="@id/vi1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱:"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="22dp"
            />
        <EditText
            android:id="@+id/forget_email"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="请输入邮箱"
            android:layout_marginLeft="90dp"
            android:background="@color/white"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/retrievepwd"
        android:layout_below="@+id/re2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/back2"
        android:text="点击找回"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:textStyle="bold" />




</RelativeLayout>