<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginEmailActivity">

    <TextView
        android:id="@+id/loginemail_te1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="邮箱登录"
        android:textSize="22dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"/>
    <View
        android:layout_below="@id/loginemail_te1"
        android:layout_width="match_parent"
        android:layout_height="0.0001dp"
        android:background="#C3C0C0"/>

    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="51dp"
        android:background="@color/white"
        >
<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="邮箱:"-->
<!--            android:layout_marginLeft="12dp"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="25dp"-->
<!--            />-->
        <EditText
            android:id="@+id/logintwo_email"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="请输入邮箱"
            android:layout_marginLeft="20dp"
            android:background="@color/white"
            />


    </RelativeLayout>
    <View
        android:id="@+id/vi1"
        android:layout_below="@id/re1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#C3C0C0"/>

    <RelativeLayout
        android:id="@+id/re2"
        android:layout_below="@id/vi1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        >
<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="邮箱:"-->
<!--            android:layout_marginLeft="12dp"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="25dp"-->
<!--            />-->
        <EditText
            android:id="@+id/yz_code"
            android:layout_width="240dp"
            android:layout_height="70dp"
            android:hint="请输入验证码"
            android:layout_marginLeft="20dp"
            android:background="@color/white"
            />
        <Button
            android:id="@+id/send_code"
            android:layout_toRightOf="@id/yz_code"
            android:layout_width="150dp"
            android:layout_height="55dp"

            android:text="获取验证码"/>
    </RelativeLayout>
    <View
        android:layout_below="@id/re2"
        android:layout_width="match_parent"
        android:layout_height="0.0001dp"
        android:background="#C3C0C0"/>
    <Button
        android:id="@+id/logintwo"
        android:layout_below="@+id/re2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/back1"
        android:text="点击登录"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:textStyle="bold" />



</RelativeLayout>