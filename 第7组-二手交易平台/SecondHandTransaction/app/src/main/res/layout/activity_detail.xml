<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DetailActivity">
    <RelativeLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#E6E8EA">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:background="@drawable/back3">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ic_baseline_search_24"/>
            <EditText
                android:id="@+id/edinput"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="55dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入搜索内容"
                android:background="#FCFDFD"/>
            <TextView
                android:id="@+id/tv_refresh1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textSize="17dp"
                android:textColor="#A60F43"
                android:layout_centerVertical="true"/>


        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/re3"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/ib_learning_use"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/white"
            android:layout_marginStart="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_learning_use" />

        <ImageButton
            android:id="@+id/ib_electric_product"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/white"

            android:layout_marginStart="110dp"

            android:scaleType="centerCrop"
            android:src="@drawable/icon_electric_product" />

        <ImageButton
            android:id="@+id/ib_daily_use"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/white"

            android:layout_marginStart="205dp"

            android:scaleType="centerCrop"
            android:src="@drawable/icon_daily_use" />
        <ImageButton
            android:id="@+id/ib_sports_good"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="310dp"
            android:background="@color/white"

            android:src="@drawable/icon_sports_good"
            android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_learning_use"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="学习用品"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_below="@+id/ib_learning_use"
        android:layout_marginStart="15dp"/>
    <TextView
        android:id="@+id/tv_electric_product"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="电子产品"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_below="@+id/ib_electric_product"
        android:layout_marginStart="110dp"/>
    <TextView
        android:id="@+id/tv_daily_use"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="生活用品"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/ib_daily_use"
        android:layout_marginStart="205dp"/>
    <TextView
        android:id="@+id/tv_sports_good"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="体育用品"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/ib_sports_good"
        android:layout_marginStart="310dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/vi_1"
        android:layout_below="@id/re3"
        android:layout_width="match_parent"
        android:layout_height="0.0001dp"
        android:background="#BDBABA"/>
    <ListView
        android:id="@+id/lv_all_commodity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/vi_1"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp" />

</RelativeLayout>