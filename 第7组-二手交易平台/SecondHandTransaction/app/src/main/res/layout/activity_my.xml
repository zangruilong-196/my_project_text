<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MyActivity">
    <TextView
        android:id="@+id/my_te1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="我的"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"/>

    <RelativeLayout
        android:id="@+id/img_logo"
        android:layout_below="@id/my_te1"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="100dp"
        android:background="@drawable/back5">
        <TextView
            android:id="@+id/my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎您~"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/my_show_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ww"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/img_logo"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <View

            android:layout_width="match_parent"
            android:layout_height="0.0001dp"
            android:background="#C3C0C0"/>
        <RelativeLayout
            android:id="@+id/my_re1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_person_24"/>
            <TextView
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="个人信息"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:background="@color/white"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_navigate_next_24"/>
        </RelativeLayout>

        <View
            android:layout_below="@id/my_re1"
            android:layout_width="match_parent"
            android:layout_height="0.0001dp"
            android:background="#C3C0C0"/>

        <RelativeLayout
            android:id="@+id/my_re2"
            android:layout_below="@id/my_re1"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_apps_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="更改密码"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:background="@color/white"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_navigate_next_24"/>
        </RelativeLayout>

        <View
            android:layout_below="@id/my_re2"
            android:layout_width="match_parent"
            android:layout_height="0.0001dp"
            android:background="#C3C0C0"/>

        <RelativeLayout
            android:id="@+id/my_re3"
            android:layout_below="@id/my_re2"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_business_center_24" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="我的发布"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:background="@color/white"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_navigate_next_24"/>
        </RelativeLayout>

        <View
            android:layout_below="@id/my_re3"
            android:layout_width="match_parent"
            android:layout_height="0.0001dp"
            android:background="#C3C0C0"/>

        <RelativeLayout
            android:id="@+id/my_re4"
            android:layout_below="@id/my_re3"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_favorite_border_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="我的收藏"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:background="@color/white"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_navigate_next_24"/>
        </RelativeLayout>

        <View
            android:layout_below="@id/my_re4"
            android:layout_width="match_parent"
            android:layout_height="0.0001dp"
            android:background="#C3C0C0"/>

        <RelativeLayout
            android:id="@+id/my_re5"
            android:layout_below="@id/my_re4"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_settings_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="退出登录"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:background="@color/white"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_navigate_next_24"/>
        </RelativeLayout>
        <View
            android:layout_below="@id/my_re5"
            android:layout_width="match_parent"
            android:layout_height="0.0001dp"
            android:background="#C3C0C0"/>


    </RelativeLayout>




</RelativeLayout>